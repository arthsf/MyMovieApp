<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyMovieApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!-- Secondary brand color. -->
        <item name="fontFamily">@font/arkhip_font</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:editTextColor">@android:color/black</item>
        <item name="android:textColorHint">@android:color/black</item>
    </style>

    <style name="Widget.App.TabLayout" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.TabLayout</item>
    </style>

    <style name="ThemeOverlay.App.TabLayout" parent="">
        <item name="tabIconTint">@color/icons_color</item>
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorOnSurface">@color/white</item>
        <item name="backgroundTint">@color/black</item>
    </style>

    <style name="MovieDetailsTextStyle.Italic" parent="MovieDetailsTextStyle">
        <item name="android:textStyle">italic</item>
    </style>


    <style name="MovieDetailsTextStyle" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">@dimen/movieDetailsTextSize</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="BtnNextStyle" parent="PrevBtnStyle">
        <item name="shapeAppearance">@style/ShapeAppearanceNextBtn</item>
    </style>

    <style name="ShapeAppearanceNextBtn" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerSizeTopRight">30dp</item>
        <item name="cornerSizeBottomLeft">30dp</item>
    </style>

    <style name="PrevBtnStyle" parent="Widget.MaterialComponents.Button">
        <item name="rippleColor">@color/gold</item>
        <item name="shapeAppearance">@style/ShapeAppearancePrevBtn</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>

    </style>

    <style name="ShapeAppearancePrevBtn" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerSizeTopLeft">30dp</item>
        <item name="cornerSizeBottomRight">30dp</item>
    </style>


    <style name="MoviesCategoryCardViewStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:backgroundTint">@color/colorAccent</item>
        <item name="cardCornerRadius">14dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="rippleColor">@color/colorAccent</item>
        <item name="layout_constraintDimensionRatio">1.3:1</item>
    </style>

    <style name="TopRoundedCardViewStyle" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance_custom_corners</item>
    </style>

    <style name="ShapeAppearance_custom_corners" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">8dp</item>
        <item name="cornerSizeTopRight">8dp</item>
    </style>

</resources>